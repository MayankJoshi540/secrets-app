<%- include('partials/header') %>
  <div class="login-head">
    <h1 class="inline">Now You've <h1 class="inline">Succesfully</h1> Registered Now Enter Email & Password</h1>
  </div>
  <div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>
      <form action="/login" method="POST" class="space-y-4">
        <div>
          <label class="block text-gray-700">Email</label>
          <input type="email" name="usermail" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring" required>
        </div>
        <div>
          <label class="block text-gray-700">Password</label>
          <input type="password" name="password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring" required>
        </div>
        <button type="submit" class="w-full bg-gray-800 text-white py-2 rounded-lg hover:bg-gray-900">Login</button>
      </form>
    </div>
  </div>

  <%- include('partials/footer') %>

<% if (typeof alertMessage !== 'undefined' && alertMessage) { %>
  <script>
    alert("<%= alertMessage %>");
  </script>
<% } %>
